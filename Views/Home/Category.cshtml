@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
}

<style>
    .container {
        margin: 0 auto;
        max-width: 910px;
    }

    .choose {
        width: 100%;
        height: 40px;
    }

        .choose .fa {
            margin-right: 20px;
            font-size: 30px;
            color: gray;
            float: right;
        }

    .book {
        display: inline-block;
        width: 230px;
        height: 390px;
        box-shadow: 0 0 20px #aaa;
        margin: 25px;
        padding: 10px 10px 0 10px;
        vertical-align: top;
        transition: height 1s;
    }

        .book:hover {
            box-shadow: 0 0 20px 0px rgba(0,0,0,0.2);
        }

        .book:after {
            position: relative;
            left: -.1cm;
            top: -1.6cm;
            float: right;
        }

    .view-btn {
        position: relative;
    }

    .cover {
        border: 2px solid gray;
        height: 80%;
        overflow: hidden;
    }

    .cover-link {
        cursor: pointer;
    }

    .cover img {
        width: 100%;
    }

    .book p {
        margin-top: 12px;
        font-size: 20px;
    }

    .book .author {
        font-size: 15px;
    }


    h1 {
        color: gray;
        text-align: center;
        font-size: 50px;
        margin-bottom: -3px;
    }

    #list-th:target .book {
        height: 100px;
        width: 250px;
        padding: 10px;
        margin: 25px auto 25px auto;
    }

    #list-th:target .cover {
        width: 246px;
    }

    #list-th:target img {
        opacity: .1;
    }

    #list-th:target p {
        margin-top: -62px;
        margin-left: 20px;
    }

    #large-th:target .book {
        height: 390px;
    }

</style>

<section style="width: 100%; margin: auto;">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <ul class="carousel-indicators">
            <li data-target="#demo" data-slide-to="0" class="active"></li>
            <li data-target="#demo" data-slide-to="1"></li>
            <li data-target="#demo" data-slide-to="2"></li>
        </ul>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="d-block w-100" src="~/img/banner1.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/img/banner2.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/img/banner3.jpg" alt="Third slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/img/banner4.jpg" alt="fourth slide">
            </div>
            <div class="carousel-item">
                <img class="d-block w-100" src="~/img/banner5.jpg" alt="fifth slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</section>
<section class="bestseller">
    <h1 class="best_title">--- Categories ---</h1>
    <div class="nav-cate" id="nav-cate">
        <ul class="shop">
            <li><a>ALL</a></li>
            @foreach (var cate in ViewBag.Cates)
            {
                <li><a asp-controller="Home" asp-action="Category" asp-route-id="@cate.Id">@cate.CategoryName</a></li>
            }
        </ul>
    </div>
</section>
<br />
<br />
<section>
    <div id="large-th">
        <div class="container">
            <h1>--- A list of books ---</h1>
            <br>
            <div class="choose">
                <a href="#list-th"><i class="fa fa-th-list" aria-hidden="true"></i></a>
                <a href="#large-th"><i class="fa fa-th-large" aria-hidden="true"></i></a>
            </div>
            <div id="list-th">
                @foreach (var b in ViewBag.Books)
                {
                    <a class="cover-link" asp-controller="Home" asp-action="Detail" asp-route-id="@b.Id">
                        <div class="book read">
                            <div class="cover">
                                <img src="@b.Image">
                            </div>
                            <div class="description">
                                <p class="title">
                                    @b.Title<br>
                                    <span class="author">@b.Author</span>
                                </p>
                            </div>
                        </div>
                    </a>
                }
            </div>
        </div>
    </div>
</section>