@model ASM.Models.Category;
@if (!User.Identity.IsAuthenticated || !User.IsInRole("Staff"))
{
    <h1>You do not have permission or login before accessing this page.</h1>
    <a asp-area="" asp-controller="Home" asp-action="Index">Back to home page</a>
}
else
{
    <form class="all-form" method="post" asp-controller="Category" asp-action="Create">
        <h3 style="text-align: center">Add a new Category</h3>
        <div class="form-group">
            <label class="h4 text-success">Category name</label>
            <input class="form-control" asp-for="@Model.CategoryName" />
            <span class="text-danger" asp-validation-for="@Model.CategoryName"></span>
        </div>
        <div class="form-group">
            <label class="h4 text-success">Category description</label>
            <input class="form-control" asp-for="@Model.CategoryDescription" />
            <span class="text-danger" asp-validation-for="@Model.CategoryDescription"></span>
        </div>
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Create" />
        </div>
    </form>
    @section Scripts {
    @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
}
