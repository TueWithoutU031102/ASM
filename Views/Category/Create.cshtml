@model ASM.Models.Category;

<form class="all-form" method="post" asp-controller="Category" asp-action="Create">
    <h3 style="text-align: center">Add a new Category</h3>
    <div class="form-group">
        <label class="h4 text-success">Category name</label>
        <input class="form-control" asp-for="@Model.CategoryName" />
        <span class="text-danger" asp-validation-for="@Model.CategoryName"></span>
    </div>
    <div class="form-group">
        <input class="btn btn-primary" type="submit" value="Create" />
    </div>
</form>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }