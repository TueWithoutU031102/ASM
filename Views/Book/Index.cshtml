@model ICollection<ASM.Models.Book>
<div class="container col-md-8 text-center mt-3">
    <h1 class="text text-danger">Book List</h1>
    <h4 class="text text-info">Total books: @ViewData["total"]</h4>
    <a class="btn btn-primary" asp-action="Create">Create</a>
    <table class="table table-primary mt-3">
        <tr>
            <th>ISBN</th>
            <th>Title</th>
            <th>Author</th>
            <th>Actions</th>
        </tr>
        @foreach (var item in Model)
        {
           <tr>
               <td>@item.ISBN</td>
               <td>@item.Title</td>
               <td>@item.Author</td>
               <td>
                   <a class="btn btn-info" asp-action="Detail" asp-route-id="@item.Id">Detail</a>
                   <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                   <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"
                   onclick="return confirm('Are you sure you want to delete this student?');">
                   Delete</a>
               </td>
           </tr>
        }
    </table>
    
</div>