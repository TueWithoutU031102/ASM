@model ASM.Models.Book;
<div class="row text-center">
    <div class="col">
        <img src="@Model.Image" width="400" height="400">
    </div>
    <div class="col">
        <table class="table-bordered bg-light">
            <tr>
                <th colspan="2" class="h3 text-primary">@Model.Title</th>
            </tr>
            <tr>
                <th>Publication Date</th>
                <td>@Model.PublicationDate.ToShortDateString()</td>
            </tr>
            <tr>
                <th>ISBN</th>
                <td>@Model.ISBN</td>
            </tr>
            <tr>
                <th>Publisher</th>
                <td>@Model.Publisher</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>@Model.Author</td>
            </tr>
<tr>
                <th>Language</th>
                <td>@Model.Language</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>$@Model.Price</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>
                    <a asp-controller="Category" asp-action="Detail" asp-route-id="@Model.Category.Id">
                        @Model.Category.CategoryName
                    </a>
                </td>
            </tr>
        </table>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
   }