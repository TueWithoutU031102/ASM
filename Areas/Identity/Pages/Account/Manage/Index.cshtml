@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<style>
    .acc-header {
        transform: translateX(5%);
    }

    .acc-h1 {
        margin-bottom: 40px;
    }

    .acc-form {
        width: 500px;
        border: 2px solid #ccc;
        padding: 30px;
        background: transparent;
        border-radius: 15px;
        margin-left: -65px;
    }

    .acc-input {
        display: block;
        border: 2px solid #ccc;
        width: 95%;
        padding: 10px;
        margin: 10px auto;
        border-radius: 5px;
    }

    .acc-label {
        color: black;
        font-size: 18px;
        padding: 10px;
    }

    .acc-container {
        background: rgba(13, 205, 207, 0.15);
    }
</style>

<partial name="_StatusMessage" model="Model.StatusMessage" />
<section class="acc-header">
    <div class="text-box">
        <form class="acc-form" id="profile-form" method="post">
            <h2 style="text-align: center">@ViewData["Title"]</h2>
            <div class="acc-container">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="acc-label" asp-for="Username"></label>
                    <input asp-for="Username" class="acc-input" disabled />
                    <br />
                </div>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}