@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<style>
    .acc-header {
        transform: translateX(5%);
    }

    .acc-h1 {
        margin-bottom: 40px;
    }

    .acc-form {
        width: 500px;
        border: 2px solid #ccc;
        padding: 30px;
        background: transparent;
        border-radius: 15px;
        margin-left: -65px;
    }

    .acc-input {
        display: block;
        border: 2px solid #ccc;
        width: 95%;
        padding: 10px;
        margin: 10px auto;
        border-radius: 5px;
    }

    .acc-label {
        color: black;
        font-size: 18px;
        padding: 10px;
    }

    .acc-container {
        background: rgba(13, 205, 207, 0.15);
        border-radius: 20px
    }
</style>

<partial name="_StatusMessage" for="StatusMessage" />
<section class="acc-header">
    <div class="text-box">
        <form class="acc-form" id="change-password-form" method="post">
            <h2 style="text-align: cemter">@ViewData["Title"]</h2>
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="acc-container">
                <label class="acc-label" asp-for="Input.OldPassword"></label>
                <input asp-for="Input.OldPassword" class="acc-input" />
                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                <label class="acc-label" asp-for="Input.NewPassword"></label>
                <input asp-for="Input.NewPassword" class="acc-input" />
                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                <label class="acc-label" asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="acc-input" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                <br />
            </div>
            <button type="submit" class="btn btn-primary">Update password</button>
        </form>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}