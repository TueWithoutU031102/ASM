@page "/admin/members"
@model ASM.Areas.Admin.Pages.User.IndexModel

@if (!User.Identity.IsAuthenticated || !User.IsInRole("Administrator"))
{
    <h1>Bạn không có quyền hoặc hãy đăng nhập trước khi truy cập trang này.</h1>
    <a asp-area="" asp-controller="Home" asp-action="Index">Back to home page</a>
}
else
{
    ViewData["Title"] = "Roles list";
    <h2>@ViewData["Title"]</h2>
    <partial name="_StatusMessage" model="@Model.StatusMessage" />
    <a class="btn btn-secondary" asp-page="../User/Index">Assign roles to users</a>
    <table class="table">
        <tr>
            <th>User name</th>
            <th>Role</th>
            <th>Action</th>
        </tr>
        @foreach (var user in Model.users)
        {
            <tr>
                <td>@user.UserName</td>
                <td>

                </td>
                <td>
                    <a class="btn btn-success btn-sm" asp-page="./AddRole" as-route-id="@user.Id">Update role</a>
                </td>
            </tr>
        }
    </table>
}