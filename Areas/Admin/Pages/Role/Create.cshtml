@page "/admin/addroles"
@model ASM.Areas.Admin.Pages.Role.CreateModel
@if (!User.Identity.IsAuthenticated || !User.IsInRole("Administrator"))
{
    <h1>Bạn không có quyền hoặc hãy đăng nhập trước khi truy cập trang này.</h1>
    <a asp-area="" asp-controller="Home" asp-action="Index">Back to home page</a>
}
else
{
    ViewData["Title"] = "Create roles";
    <h2>@ViewData["Title"]</h2>
    <partial name="_StatusMessage" model="@Model.StatusMessage" />
    <hr />
    <div class="all-form">
    <form method="post">
        <h3 style="text-align: center">Add a new role</h3>
        <div class="form-group">
            <label asp-for="Input.Name" class="h4 text-success"></label>
            <input asp-for="Input.Name" class="form-control" />
            <span asp-validation-for="Input.Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
    </div>

    @section Scripts {
    @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
}