@page "admin/addroles"
@model ASM.Areas.Admin.Pages.Role.CreateModel
@if (User.Identity.IsAuthenticated && !User.IsInRole("Administrator"))
{
    <h1>Bạn không có quyền hoặc hãy đăng nhập trước khi truy cập trang này.</h1>
    <a asp-area="" asp-controller="Home" asp-action="Index">Back to home page</a>
}
else
{
    ViewData["Title"] = "Create roles";
<h2>@ViewData["Title"]</h2>
<partial name="_StatusMessage" model="@Model.StatusMessage" />
<hr />

    <form class="all-form" method="post">
        <h3 style="text-align: center">Add a new role</h3>
        <div class="form-group">
            <label class="h4 text-success">Role name</label>
            <input class="form-control" asp-for="@Model.Input" />
            <span class="text-danger" asp-validation-for="@Model.Input" ></span>
        </div>
        <div class="form-group">
            <input class="btn btn-primary" type="submit" value="Create" />
        </div>
    </form>
    @section Scripts {
    @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
}